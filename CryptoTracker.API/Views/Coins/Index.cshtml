@model List<CryptoTracker.Infrastructure.Services.CoinDto>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Coins</title>
</head>
<body>
    <h1>Top 10 Coins</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Coin</th>
                <th>Symbol</th>
                <th>Price (USD)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coin in Model)
            {
                <tr>
                    <td>@coin.Name</td>
                    <td>@coin.Symbol.ToUpper()</td>
                    <td>@coin.Current_Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
